<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="PressPlay">
      <section name="U2X" type="PressPlay.U2X.Configuration.ConfigurationSectionHandler,PressPlay.U2X" />
    </sectionGroup>
  </configSections>
  <PressPlay>
    <U2X>
      <TypeResolver ExcludeByDefault="true">
        <ExcludeTypes>
          <Type>UnityEngine.Transform</Type>
        </ExcludeTypes>
        <IncludeTypes>
          <Type>UnityEngine.MeshRenderer</Type>
        </IncludeTypes>
        <NamespaceRules>
          <Convert Namespace="UnityEngine" To="PressPlay.U2X.Xna.Components" />
        </NamespaceRules>
      </TypeResolver>
    </U2X>
  </PressPlay>
</configuration>