<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="PressPlay">
      <section name="FFWD" type="PressPlay.FFWD.Exporter.Configuration.ConfigurationSectionHandler,PressPlay.FFWD" />
    </sectionGroup>
  </configSections>
  <PressPlay>
    <FFWD>
      <TypeResolver ExcludeByDefault="true">
        <ExcludeTypes>
          <Type>UnityEngine.Transform</Type>
        </ExcludeTypes>
        <IncludeTypes>
          <Type>UnityEngine.MeshRenderer</Type>
          <Type>XNAMeshCollider</Type>
        </IncludeTypes>
        <NamespaceRules>
          <Convert Namespace="UnityEngine" To="PressPlay.FFWD.Xna.Components" />
          <Convert Type="XNAMeshCollider" To="PressPlay.FFWD.Xna.Components.MeshCollider" />
        </NamespaceRules>
        <ComponentWriters>
          <Map Type="UnityEngine.MeshRenderer" To="PressPlay.FFWD.Exporter.Writers.MeshRendererComponentWriter, PressPlay.FFWD" />
          <Map Type="XNAMeshCollider" To="PressPlay.FFWD.Exporter.Writers.XNAMeshColliderComponentWriter, PressPlay.FFWD" />
        </ComponentWriters>
      </TypeResolver>
    </FFWD>
  </PressPlay>
</configuration>